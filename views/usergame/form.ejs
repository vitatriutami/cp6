<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Custom CSS -->
	<link rel="stylesheet" href="http://localhost:3000/stylesheets/style-form-user.css">
    
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
    <title>Form Usergame</title>

</head>
<body>
    <div class="container">
        <h1>Form Usergame</h1>
        <form id="form">
            <div class="form-group">
                <label>Username</label>
                <input type="text" id="username" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="text" id="password" class="form-control">
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <input type="text" id="bioId" class="form-control">
            </div>
            <div class="form-group">
                <label>Score</label>
                <input type="text" id="historyId" class="form-control">
            </div>
            <button type="submit" id="save" class="btn btn-primary">Save</button>
            <a href="/usergame" class="btn btn-secondary">Back</a>
        </form>
    </div>

    <script>
        let id = '<%= id %>'
        let method = id === '' ? 'POST' : 'PUT'
        let usernameInput = document.getElementById("username")
        let passwordInput = document.getElementById("password")
        let bioInput = document.getElementById("bioId")
        let historyInput = document.getElementById("historyId")

        let form = document.getElementById("form")
        form.onsubmit = function(e) {
            e.preventDefault()
            let username = usernameInput.value
            let password= passwordInput.value
            let bioId = bioInput.value
            let historyId = historyInput.value
            
            fetch(`/api/v1/usergame/${id}`, {
                method: method,
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    username: username,
                    password: password,
                    bioId: bioId,
                    historyId: historyId
                })
            }).then(() => {
                window.location.href = "/usergame"
            })
        }

    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Custom CSS -->
	<link rel="stylesheet" href="http://localhost:3000/stylesheets/style-detail-user.css">
    
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">    
    
    <title>...</title>
    
</head>
<body>
    <div class="container">
        <a href="/usergame" class="btn btn-secondary">Back</a>
        <h3 id="fullname">...</h3>
        <hr />
        <ul>
            <li id="email">...</li>
            <li id="age">...</li>
            <li id="score">...</li>
            <li id="level">...</li>
        </ul>
    </div>

    <script>
        fetch(`/api/v1/bio/<%= id %>`)
        .then(raw => raw.json())
        .then(data => {
            console.log(data)
            let emailData = document.getElementById("email")
            let fullnameData = document.getElementById("fullname")
            let ageData = document.getElementById("age")
            emailData.innerHTML = data.email
            fullnameData.innerHTML = data.fullname
            ageData.innerHTML = data.age
            document.title = data.fullname
        })
    </script>

    <script>
        fetch(`/api/v1/history/<%= id %>`)
        .then(raw => raw.json())
        .then(data => {
            console.log(data)
            let scoreData = document.getElementById("score")
            let levelData = document.getElementById("level")
            scoreData.innerHTML = data.score
            levelData.innerHTML = data.level
        })
    </script>

</body>
</html>